<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvSugerencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="613dp"
        android:gravity="center"
        android:text="Envianos tu sugerencia para mejor la aplicacion \n o si encuentras algun fallo."
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/etSugerenciaComentario"
        android:layout_width="269dp"
        android:layout_height="87dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="394dp"
        android:gravity="bottom|left"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:maxLength="500"
        android:scrollbars="vertical"
        android:labelFor="@id/etSugerenciaComentario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/btnSugerenciaEnviar"
        android:layout_width="231dp"
        android:layout_height="52dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="475dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="204dp"
        android:text="@string/enviar_sugerencias"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>