<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvGarage"
        android:text="Martin Garage"
        android:textSize="35sp"
        android:layout_marginTop="45sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTFechaReserva"
        android:text="Fecha de reserva: "
        android:textSize="18sp"
        android:layout_below="@+id/tvGarage"
        android:layout_marginTop="50sp"
        android:layout_marginStart="35sp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvFechaHoraReserva"
        android:text="2021-11-12 16:30"
        android:textSize="18sp"
        android:layout_below="@+id/tvGarage"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="35sp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTFechaRetiro"
        android:text="Fecha de retiro: "
        android:textSize="18sp"
        android:layout_below="@+id/tvTFechaReserva"
        android:layout_marginTop="35sp"
        android:layout_marginStart="35sp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvFechaHoraRetiro"
        android:text="2021-11-13 6:30"
        android:textSize="18sp"
        android:layout_below="@+id/tvTFechaReserva"
        android:layout_marginTop="35sp"
        android:layout_marginEnd="35sp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTTipoVehiculo"
        android:text="Tipo de vehiculo: "
        android:textSize="18sp"
        android:layout_below="@+id/tvTFechaRetiro"
        android:layout_marginTop="75sp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTipoVehiculo"
        android:text="Auto"
        android:textSize="20sp"
        android:layout_below="@+id/tvFechaHoraRetiro"
        android:layout_marginTop="75sp"
        android:layout_marginEnd="80sp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTEstados"
        android:text="Estado de reserva: "
        android:textSize="18sp"
        android:layout_below="@+id/tvTTipoVehiculo"
        android:layout_marginTop="30sp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvEstados"
        android:text="Esperando"
        android:textSize="20sp"
        android:layout_below="@+id/tvTipoVehiculo"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="48sp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTTiempoRestante"
        android:text="Tiempo Restante"
        android:textSize="20sp"
        android:layout_below="@+id/tvTEstados"
        android:layout_marginTop="75sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvDuracion"
        android:text="15:24"
        android:textSize="25sp"
        android:layout_below="@+id/tvTTiempoRestante"
        android:layout_marginTop="20sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnCancelarReserva"
        android:text="Cancelar Reserva"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="15sp"
        android:background="@drawable/borde_circular"
        android:layout_below="@+id/tvDuracion"
        android:layout_marginTop="70sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>