<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvConductorTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conductor: "
        />

    <TextView
        android:id="@+id/tvConductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Martin"
        android:layout_toEndOf="@id/tvConductorTitulo" />

    <TextView
        android:id="@+id/tvVehiculoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehiculo: "
        android:layout_below="@id/tvConductorTitulo"
        />

    <TextView
        android:id="@+id/tvVehiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto"
        android:layout_below="@+id/tvConductor"
        android:layout_toEndOf="@id/tvVehiculoTitulo" />

    <TextView
        android:id="@+id/tvPrecioTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio: "
        android:layout_below="@+id/tvVehiculoTitulo"
        />

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10"
        android:layout_below="@id/tvVehiculoTitulo"
        android:layout_toEndOf="@id/tvPrecioTitulo" />

    <TextView
        android:id="@+id/tvFInicialTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Inicial: "
        android:layout_below="@id/tvPrecioTitulo"
        />

    <TextView
        android:id="@+id/tvFInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-10-20 16:31:48"
        android:layout_toEndOf="@id/tvFInicialTitulo"
        android:layout_below="@id/tvPrecioTitulo" />

    <TextView
        android:id="@+id/tvFFinalTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Final: "
        android:layout_below="@id/tvFInicialTitulo"
        />

    <TextView
        android:id="@+id/tvFFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-10-20 16:31:48"
        android:layout_toEndOf="@id/tvFFinalTitulo"
        android:layout_below="@id/tvFInicialTitulo" />

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Aceptar"
        android:textSize="10sp" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_below="@+id/btnAceptar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10sp"
        android:text="Cancelar"
        android:textSize="10sp" />

</RelativeLayout>