<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="-34.632569807434834"
        mapbox:mapbox_cameraTargetLng="-58.362356193478384"
        mapbox:mapbox_cameraZoom="8.526846"/>

    <TextView
        android:id="@+id/tempo"
        android:visibility="gone"
        android:textSize="20sp"
        android:textStyle="normal"
        android:padding="5dp"
        android:background="@color/md_grey_400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="16dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_location_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="16dp"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@android:drawable/ic_search_category_default"
        android:contentDescription="@string/boton_para_buscar_comunas" />

    <Button
        android:id="@+id/btnGarage"
        android:layout_width="364dp"
        android:layout_height="61dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="554dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="59dp"
        android:text="@string/ver_garage"
        android:visibility="gone"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</FrameLayout>