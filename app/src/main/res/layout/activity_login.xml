<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_mapa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8000000"
        android:gravity="center"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@mipmap/ic_logo_estacionapp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/md_grey_500">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:background="@drawable/input"
                android:textColorHint="@color/md_grey_500"
                android:textColor="@color/white"

                android:hint="Correo Electronico"
                android:id="@+id/etEmail"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/md_grey_500"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:background="@drawable/input"
                android:textColorHint="@color/md_grey_500"
                android:textColor="@color/white"
                android:hint="Contrase単a"

                android:id="@+id/etPassword"
                android:imeOptions="actionSend"/>
        </com.google.android.material.textfield.TextInputLayout>
        <CheckBox
            android:id="@+id/cbRecordarLogin"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mantener Sesion"
            android:textColor="@color/md_grey_500"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_redondeado"
            android:id="@+id/btnLogin"
            android:text="@string/Login">
        </Button>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/signInButton"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:buttonSize="wide"
            app:colorScheme="dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textTvoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorLink="@color/purple_200"
            android:text="多Olvidaste tu contrase単a?"
            android:clickable="true"
            android:focusable="true"
            android:onClick="recuperarIntent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textColorLink="@color/purple_200"
            android:text="多No estas registrado?"
            android:clickable="true"
            android:focusable="true"
            android:onClick="registerIntent"/>

    </LinearLayout>
</RelativeLayout>